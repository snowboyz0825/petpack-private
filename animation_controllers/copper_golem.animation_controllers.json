{
  "format_version": "1.10.0",
  "animation_controllers": {
    "controller.animation.copper_golem.idle": {
      "initial_state": "selector",
      "states": {
        "selector": {
          "transitions": [ 
            { "default": "v.oxidation == 'unoxidized' || v.oxidation == 'exposed'" },
            { "weathered": "v.oxidation == 'weathered'" } ,
            { "default": "v.oxidation == 'oxidized'" } 
          ]
        },
        "default": {
          "animations": [ "spin" ],
          "transitions": [ { "selector": "query.all_animations_finished" } ]
        },
        "weathered": {
          "animations": [ "spin_weathered" ],
          "transitions": [ { "selector": "query.all_animations_finished" } ]
        },
        "oxidized": {
          "animations": [ "spin_oxidized" ],
          "transitions": [ { "selector": "query.all_animations_finished" } ]
        }
      }
    },
    "controller.animation.copper_golem.walk": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [ { "walk": "v.walking" } ],
          "transitions": [ { "holding_item": "v.is_holding_right" } ],
          "blend_transition": 0.2
        },
        "holding_item": {
          "animations": [ { "walk_holding_item": "v.walking" }, "hold_item" ],
          "transitions": [ { "default": "!v.is_holding_right" } ],
          "blend_transition": 0.2
        }
      }
    },
    "controller.animation.copper_golem.amogus_scale": {
      "initial_state": "default",
      "states": {
        "default": {
          "animations": [ {"amogus_scale":"!(v.is_holding_right || (v.chest_interaction=='take_fail' ? 1:0) || (v.chest_interaction=='take' ? 1:0)) && q.is_name_any('Among Us','Among Us§0','Among Us§1','Among Us§2','Among Us§3','Among Us§4','Among Us§5','Among Us§6','Among Us§7','Among Us§8','Among Us§9','Among Us§a','Among Us§b','Among Us§c','Among Us§d','Among Us§e','Among Us§f','Among Us§g','Among Us§h','Among Us§i','Among Us§j','Among Us§m','Among Us§n','Among Us§p','Among Us§q','Among Us§s','Among Us§t','Among Us§u','Among Us§v')"} ]
        }
      }
    },
    
    "controller.animation.copper_golem.chest_interaction": {
      "initial_state": "none",
      "states": {
        "none": {
          "transitions": [ 
            { "put_item": "v.chest_interaction == 'put'" },
            { "put_item_fail": "v.chest_interaction == 'put_fail'" },
            { "take_item": "v.chest_interaction == 'take'" },
            { "take_item_fail": "v.chest_interaction == 'take_fail'" }
          ],
          "blend_transition": 0.2
        },
        "put_item": {
          "animations": [ "chest_interaction.put_item" ],
          "transitions": [ { "none": "query.all_animations_finished" } ]
        },
        "put_item_fail": {
          "animations": [ "chest_interaction.put_item_fail" ],
          "transitions": [ { "none": "query.all_animations_finished" } ]
        },
        "take_item": {
          "animations": [ "chest_interaction.take_item" ],
          "transitions": [ { "none": "query.all_animations_finished" } ]
        },
        "take_item_fail": {
          "animations": [ "chest_interaction.take_item_fail" ],
          "transitions": [ { "none": "query.all_animations_finished" } ]
        }
      }
    }
  }
}