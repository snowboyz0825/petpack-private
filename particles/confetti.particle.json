{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "petpack:confetti",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particle/confetti"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 2,
				"max_particles": 4000
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 1
			},
			"minecraft:emitter_shape_point": {
				"direction": ["Math.random(-1, 1)", "3*Math.random(-1, 1)", "Math.random(-1, 1)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 10
			},
			"minecraft:particle_initial_spin": {
				"rotation": "Math.random(0,360)"
			},
			"minecraft:particle_initial_speed": 0.5,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, -0.2, 0]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["variable.particle_random_1/10", "variable.particle_random_1/10"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 27,
					"texture_height": 3,
					"uv": ["math.floor(variable.particle_random_2*8)*3", 0],
					"uv_size": [3, 3]
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 10,
				"collision_radius": 0.1
			},
			"minecraft:particle_appearance_tinting": {
				"color": ["v.particle_random_3", "v.particle_random_2", "v.particle_random_1", 1]
			}
		}
	}
}